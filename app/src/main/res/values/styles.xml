<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <!-- attributes without 'android:' are for Support library compatibility-->
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <!-- Fullscreen activity (AlarmAlertActivity) -->
    <style name="FullScreen" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:background">@color/primary</item>
    </style>


    <style name="AppTheme.ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/primary</item>
        <!-- Support library compatibility-->
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="background">@color/primary</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/icons</item>
    </style>

</resources>
